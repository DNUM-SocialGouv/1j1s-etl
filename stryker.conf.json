{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": [
    "html",
    "progress"
  ],
  "testRunner": "mocha",
  "buildCommand": "npm run test:mutation:prepare",
  "mochaOptions": {
    "config": "./.mocharc.json",
    "spec": ["**/*.test.js"]
  },
  "coverageAnalysis": "perTest",
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.mutation.json",
  "disableTypeChecks": true,
  "mutate": [
    "apps/evenements/src/**/*.ts",
    "apps/logements/src/**/*.ts",
    "apps/shared/src/**/*.ts",
    "apps/stages/src/**/*.ts"
  ],
  "ignorePatterns": [
    "apps/configuration/src/setup.ts",
    "apps/evenements/src/index.ts",
    "apps/logements/src/index.ts",
    "apps/stages/src/index.ts",
    "apps/evenements/src/chargement/index.ts",
    "apps/evenements/src/extraction/index.ts",
    "apps/evenements/src/transformation/index.ts",
    "apps/evenements/src/chargement/configuration/**/*.ts",
    "apps/evenements/src/extraction/configuration/**/*.ts",
    "apps/evenements/src/transformation/configuration/**/*.ts",
    "apps/logements/src/chargement/index.ts",
    "apps/logements/src/extraction/index.ts",
    "apps/logements/src/transformation/index.ts",
    "apps/logements/src/chargement/configuration/**/*.ts",
    "apps/logements/src/extraction/configuration/**/*.ts",
    "apps/logements/src/indexation/configuration/**/*.ts",
    "apps/logements/src/transformation/configuration/**/*.ts",
    "apps/shared/src/configuration/logger.ts",
    "apps/stages/src/chargement/index.ts",
    "apps/stages/src/extraction/index.ts",
    "apps/stages/src/transformation/index.ts",
    "apps/stages/src/chargement/configuration/**/*.ts",
    "apps/stages/src/extraction/configuration/**/*.ts",
    "apps/stages/src/transformation/configuration/**/*.ts",
    "**/*.task.ts"
  ],
  "ignoreStatic": true
}
