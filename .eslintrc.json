{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "@sefr",
    "simple-import-sort"
  ],
  "parserOptions": {
    "tsconfigRootDir": ".",
    "project": [
      "./tsconfig.json"
    ]
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"
  ],
  "rules": {
    "@typescript-eslint/explicit-function-return-type": "error",
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-namespace": "off",
    "@typescript-eslint/no-unused-vars": ["error"],
    "@typescript-eslint/unbound-method": "off",
    "comma-dangle": ["error", "always-multiline"],
    "complexity": ["error", 10],
    "eol-last": "error",
    "max-depth": ["error", 2],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "no-multi-spaces": "error",
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "double"],
    "semi": "error",
    "space-infix-ops": "error",
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          ["^\\u0000"],
          ["^node:"],
          ["^(@(?!(api|cli|configuration|evenements|logements|shared|stages)))"],
          ["^[a-zA-Z0-9]?"],
          ["^@test"],
          ["^@api"],
          ["^@cli"],
          ["^@configuration"],
          ["^@evenements"],
          ["^@logements"],
          ["^@shared"],
          ["^@stages"],
          ["^@?"],
          ["^\\."]
        ]
      }
    ],
    "@sefr/no-onion-architecture-violation": "error",
    "@sefr/no-cross-domain-import": [
      "error",
      [
        {
          "domain": "evenements",
          "domainsToExclude": [
            "logements",
            "stages"
          ]
        },
        {
          "domain": "logements",
          "domainsToExclude": [
            "evenements",
            "stages"
          ]
        },
        {
          "domain": "stages",
          "domainsToExclude": [
            "evenements",
            "logements"
          ]
        }
      ]
    ]
  },
  "overrides": [
    {
      "files": ["**/src/**/application-service/index.ts"],
      "rules": {
        "@sefr/no-onion-architecture-violation": "off"
      }
    },
    {
      "files": [
        "**/stages/src/transformation/domain/model/jobteaser/index.ts"
      ],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off"
      }
    },
    {
      "files": [
        "**/log.decorator.ts",
        "**/evenements/src/chargement/domain/service/charger-evenements.domain-service.ts",
        "**/stages/src/chargement/domain/service/charger-offres-de-stage.domain-service.ts",
        "**/chargement/src/domain/service/charger-offres-de-stage.domain-service.ts"
      ],
      "rules": {
        "@typescript-eslint/no-non-null-assertion": "off"
      }
    },
    {
      "files": [
        "**/*.test.ts"
      ],
      "rules": {
        "@sefr/no-onion-architecture-violation": "off"
      }
    }
  ],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx"
      ]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      }
    }
  }
}
